<h1>All Topics <% if policy(Topic).create? %><%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %><% end %></h1> 
 <div class="row">
  <div class="col-md-8">
    <% @topics.each do |topic| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <p><%= link_to topic.title, topic %></p>
          <% if policy(Topic).destroy? %><%= link_to "Delete Topic", topic, method: :delete, class: 'btn btn-danger' %><% end %> 
            <br>
            <br>
            <% topic.bookmarks.each do |bookmark| %>
            <p><%= link_to bookmark.url, bookmark.url, :target => '_blank' %></p>
            <% end %>
        </h4>
       </div>
      </div>
    <% end %> 
  </div>      